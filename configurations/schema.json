{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "MasonSchema",
  "properties": {
    "configurations": {
      "type": "object",
      "properties": {
         "metastore": {
            "type": "object",
            "properties": {
               "client": {
                 "type":  "string",
                 "enum": ["glue"]
               }
            },
           "required": ["client"]
         },
        "execution_engine": {
          "type": "object"
        },
        "scheduler": {
          "type": "object"
        },
        "storage_engine": {
          "type": "object"
        }
      },
      "required": ["metastore", "execution_engine", "scheduler", "storage_engine"]
    },
    "operator": {
      "type": "object",
      "properties" : {
        "type": {"type": "string"}
      },
      "required": ["type"]
    }
  },
  "required": ["configurations", "operator"]
}
